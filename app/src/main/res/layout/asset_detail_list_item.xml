<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="3">


    <android.support.v7.widget.CardView
        android:id="@+id/asset_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/asset_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <TextView
                    android:id="@+id/asset_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:text="Asset Details"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/asset_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/asset_heading"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/asset_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/asset_name"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:id="@+id/asset_make"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/asset_desc"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:id="@+id/asset_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/asset_make"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp" />

                <ImageView
                    android:id="@+id/delete_asset"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:drawable/ic_menu_delete" />

                <ImageView
                    android:id="@+id/edit_asset"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/delete_asset"
                    android:background="@android:drawable/ic_menu_edit" />

            </RelativeLayout>

            <TextView
                android:id="@+id/seperator_drawable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/asset_detail"
                android:layout_centerHorizontal="true"
                android:text="View More" />

            <View
                android:id="@+id/seperator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/seperator_drawable"
                android:background="@color/off_white" />

            <RelativeLayout
                android:id="@+id/amc_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/seperator"
                android:background="@color/white"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/amc_add_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@android:drawable/ic_input_add" />

                <TextView
                    android:id="@+id/amc_add_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/amc_add_img"
                    android:layout_centerHorizontal="true"
                    android:text="ADD AMC" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/amc_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/seperator"
                android:background="@color/white"
                android:visibility="gone">

                <TextView
                    android:id="@+id/amc_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:text="Amc Details"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amc_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/amc_heading"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/amc_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/amc_name"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:id="@+id/amc_add_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="Add Report"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/amc_get_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/amc_add_report"
                    android:text="Generate Report"
                    android:textColor="@color/colorPrimary" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>



